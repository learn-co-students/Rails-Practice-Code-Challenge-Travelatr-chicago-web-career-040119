<h1>Create a Post</h1>

<% if @errors %>
  <div class="error-output">
    <h3>There are errors:</h3>
    <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label "Enter a Title" %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label "Blogger: " %>
    <%= f.collection_select :blogger_id, @bloggers, :id, :name %>
  </p>

  <p>
    <%= f.label "Destination: " %>
    <%= f.collection_select :destination_id, @destinations, :id, :name %> 
  </p>

  <p>
    <%= f.label "Enter a content" %><br>
    <%= f.text_area :content, size: "100x30" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
