<h1>Bloggers edit page</h1>

<% if @errors %>
  <% @errors.each do |error| %>
  <%= error %>
  <% end %>
<% end %>


<h1>New blogger form: </h1>
<%= form for(@blogger) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :bio %>
  <%= f.text_field :bio %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.submit %>
<% end %>
